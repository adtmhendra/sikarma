<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.sikarma.view.HomeFragment"
        android:label="Sikarma"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.sikarma.view.admin.LoginFragment"
        android:label="Login Admin"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.sikarma.view.admin.DashboardFragment"
        android:label="Dashboard Admin"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_symptomsFragment"
            app:destination="@id/symptomsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_typeDataFragment"
            app:destination="@id/typeDataFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_ruleDataFragment"
            app:destination="@id/ruleDataFragment" />
    </fragment>
    <fragment
        android:id="@+id/symptomsFragment"
        android:name="com.example.sikarma.view.admin.SymptomsDataFragment"
        android:label="Data Gejala Penyakit"
        tools:layout="@layout/fragment_data_symptoms" />
    <fragment
        android:id="@+id/typeDataFragment"
        android:name="com.example.sikarma.view.admin.TypeDataFragment"
        android:label="Data Jenis Penyakit"
        tools:layout="@layout/fragment_type_data" />
    <fragment
        android:id="@+id/ruleDataFragment"
        android:name="com.example.sikarma.view.admin.RuleDataFragment"
        android:label="Data Rule Penyakit"
        tools:layout="@layout/fragment_rule_data" />
</navigation>