<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:padding="@dimen/dimen_8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/material_list_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:clickable="true"
        android:elevation="@dimen/dimen_4dp"
        android:focusable="true"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:elevation="@dimen/dimen_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_1dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_1dp"
            app:cardCornerRadius="@dimen/dimen_8dp">

            <RelativeLayout
                android:id="@+id/rl_list_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_16dp">

                <TextView
                    android:id="@+id/tv_type_name"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/dimen_4dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/title_type_name"
                    app:drawableEndCompat="@drawable/ic_round_chevron_right"
                    app:drawableTint="?attr/colorPrimaryVariant" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>